<div class="container">
    <div class="row">
        <div class="col-md-6">
            <div class="card">
                <form class="box" action="/users/login" method="POST">
                    <h1>Login</h1>
                    <p class="text-muted"> Please enter your login and password!</p>
                    <input type="text" name="username" placeholder="Username" autocomplete="off" {{#if values}}
                        value="{{values.username}}" {{/if}}>
                    <input type="password" name="password" placeholder="Password" {{#if values}}
                        value="{{values.password}}" {{/if}}>
                    <input type="submit" name="" value="LogIn">
                    <div class="col-md-12 text-danger">
                        {{errors}}
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>


