<div class="container">
    <div class="row my-4">
        <div class="col-sm-12">
            <form class="form-inline my-lg-0">
                <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
                <input class="form-control mx-3 mr-sm-2" type="search" placeholder="Search" aria-label="Search">
            </form>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-3 ml-0">
            <div class="card" style="max-width: 16rem;">
                <div class="card-body">
                    <h5 class="card-title mb-3">Filter</h5>
                    <select class="form-control form-control-sm rounded-0 my-2">
                        <option>Small select</option>
                    </select>
                    <select class="form-control form-control-sm rounded-0 my-2">
                        <option>Small select</option>
                    </select>
                    <select class="form-control form-control-sm rounded-0 my-2">
                        <option>Small select</option>
                    </select>
                    <select class="form-control form-control-sm rounded-0 my-2">
                        <option>Small select</option>
                    </select>
                </div>
            </div>
        </div>
        <div class="col-sm-9">
            <div class="card">
                <div class="card-header d-flex justify-content-between">
                    <h5>New Card</h5>
                </div>
                <div class="card-body">
                    <form action="" method="post">
                        <div class="form-row d-flex justify-content-between">
                            <div class="form-group col-md-6">
                                <label for="name">Name card</label>
                                <input type="text" class="form-control form-control-sm" id="name" name="name">
                            </div>
                            <div class="form-group col-md-4">
                                <label for="image">Input Image Card</label>
                                <input type="file" class="form-control-file mx-2" id="image">
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="form-group col-sm-3">
                                <select class="form-control form-control-sm rounded-0 my-2">
                                    <option>Small select</option>
                                </select>
                            </div>
                            <div class="form-group col-sm-3">
                                <select class="form-control form-control-sm rounded-0 my-2">
                                    <option>Small select</option>
                                </select>
                            </div>
                            <div class="form-group col-sm-3">
                                <select class="form-control form-control-sm rounded-0 my-2">
                                    <option>Small select</option>
                                </select>
                            </div>
                            <div class="form-group col-sm-3">
                                <select class="form-control form-control-sm rounded-0 my-2">
                                    <option>Small select</option>
                                </select>
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="form-group col-sm-6">
                                <div class="form-group">
                                    <label for="level">Monster level:</label>
                                    <input type="range" class="custom-range" min="0" max="10" id="level">
                                </div>
                            </div>
                            <div class="form-group col-sm-6">
                                <div class="form-group">
                                    <label for="price">Price</label>
                                    <input type="text" class="form-control form-control-sm" id="price" name="price">
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="description">Desription</label>
                            <textarea class="form-control" rows="3" id="description" name="description" required></textarea>
                        </div>
                        <input type="submit" class="btn btn-success" value="Create">
                    </form>
                </div>

            </div>
        </div>
    </div>

</div>